{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "paths": {
      "@helgoland/core": ["dist/libs/core", "libs/core/src/index.ts"],
      "@helgoland/auth": ["libs/auth/src/index.ts"],
      "@helgoland/d3": ["libs/d3/src/index.ts"],
      "@helgoland/depiction": ["dist/libs/depiction", "libs/depiction/src/index.ts"],
      "@helgoland/control": ["libs/control/src/index.ts"],
      "@helgoland/caching": ["libs/caching/src/index.ts"],
      "@helgoland/eventing": ["libs/eventing/src/index.ts"],
      "@helgoland/map": ["dist/libs/map", "libs/map/src/index.ts"],
      "@helgoland/favorite": ["libs/favorite/src/index.ts"],
      "@helgoland/facet-search": ["libs/facet-search/src/index.ts"],
      "@helgoland/modification": ["libs/modification/src/index.ts"],
      "@helgoland/permalink": ["libs/permalink/src/index.ts"],
      "@helgoland/plotly": ["libs/plotly/src/index.ts"],
      "@helgoland/selector": ["libs/selector/src/index.ts"],
      "@helgoland/sensorml": ["libs/sensorml/src/index.ts"],
      "@helgoland/time": ["libs/time/src/index.ts"],
      "@helgoland/time-range-slider": ["libs/time-range-slider/src/index.ts"],
      "@helgoland/open-layers": ["libs/open-layers/src/index.ts"],
      "@helgoland-toolbox/test": ["libs/test/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
