{
  "name": "helgoland-toolbox-demo",
  "description": "Test of some components in the helgoland-toolbox",
  "license": "Apache-2.0",
  "scripts": {
    "build": "webpack --config src/webpack.config.js --bail",
    "clean:all": "npm run clean:tmp && rimraf node_modules",
    "clean:tmp": "rimraf lib src/app/*.ngfactory.ts src/app/*.ngsummary.json",
    "copy-lib": "copyfiles --up 2 \"../dist/**/*\" lib",
    "prebuild": "npm run clean:tmp && npm run copy-lib",
    "prestart": "npm run clean:tmp && npm run copy-lib",
    "start": "concurrently --raw \"gulp copy-lib:watch\" \"webpack-dev-server --watch --config src/webpack.config.js\""
  },
  "dependencies": {
    "@angular/common": "^4.0.0",
    "@angular/core": "^4.0.0",
    "@angular/platform-browser": "^4.0.0",
    "@angular/platform-browser-dynamic": "^4.0.0",
    "@ng-bootstrap/ng-bootstrap": "^1.0.0-beta.5",
    "Flot": "github:flot/flot",
    "jquery": "^3.2.1",
    "leaflet": "^1.2.0",
    "leaflet.markercluster": "^1.1.0"
  },
  "devDependencies": {
    "@angular/compiler": "^4.0.0",
    "@angular/compiler-cli": "^4.0.0",
    "awesome-typescript-loader": "^3.1.2",
    "concurrently": "^3.4.0",
    "copyfiles": "^1.2.0",
    "core-js": "^2.4.1",
    "gulp": "^3.9.1",
    "html-webpack-plugin": "^2.8.1",
    "rimraf": "^2.6.1",
    "rxjs": "^5.2.0",
    "typescript": "^2.2.0",
    "webpack": "^3.6.0",
    "webpack-dev-server": "^2.4.5",
    "zone.js": "^0.8.4"
  }
}
